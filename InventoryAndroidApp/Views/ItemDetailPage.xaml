<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventoryAndroidApp.Views.ItemDetailPage"
             Title="Edit Item">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Editable Item Name -->
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource Gray100}" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Item Name" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding EditableItem.ItemName}" 
                           FontSize="20"
                           HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Border>

            <!-- Editable Quantity -->
            <Border StrokeShape="RoundRectangle 10" BackgroundColor="{StaticResource Gray100}" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="STOCK QUANTITY" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>

                    <Label Text="{Binding EditableItem.CurrentQuantity, StringFormat='{}{0} units'}" 
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                        <Button Text="-" 
                                Command="{Binding UpdateQuantityCommand}"
                                CommandParameter="-1"
                                WidthRequest="60"
                                CornerRadius="30"/>

                        <Button Text="+" 
                                Command="{Binding UpdateQuantityCommand}"
                                CommandParameter="1"
                                WidthRequest="60"
                                CornerRadius="30"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Details Section (Read-only) -->
            <Border StrokeShape="RoundRectangle 10" Padding="10" BackgroundColor="{StaticResource Gray100}">
                <VerticalStackLayout Spacing="15">
                    <HorizontalStackLayout>
                        <Label Text="Last Updated:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding EditableItem.LastUpdated, StringFormat='{0:g}'}" 
                               FontSize="16"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout>
                        <Label Text="Item ID:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Margin="0,0,10,0"/>
                        <Label Text="{Binding EditableItem.ItemId}" 
                               FontSize="16"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Save/Delete Buttons -->
            <Button Text="ðŸ’¾ Save Changes"
                    Command="{Binding SaveChangesCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="10"/>

            <Button Text="ðŸ—‘ï¸ Delete Item"
                    Command="{Binding DeleteItemCommand}"
                    BackgroundColor="{StaticResource Error}"
                    TextColor="White"
                    CornerRadius="10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
